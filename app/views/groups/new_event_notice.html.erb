<div class = "container">
  <div class = "row justify-content-center" >
    <div class = "col-7">
      <h2>Event Mail</h2>
      <%= form_with url: send_event_notice_group_path(@group), method: :post do |f| %>
      <div>
        <p>Title</p>
        <%= f.text_field :subject, style: "width: 100%;" %>
      </div>
      <div>
        <p class = "mt-3">Content</p>
        <%= f.text_area :content, style: "width: 100%;" %>
      </div>
      <div class = "d-flex justify-content-end mt-3 " >
        <%= f.submit "送信", class: " btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>