<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td class = "favorite-btn-<%= @book.id %>">
            <%= render "favorites/favorite_btn", book: @book %>
          </td>
          <td>
            コメント数:<%= @book.book_comments.count %>
          </td>
          <td>
            閲覧数:<%= @book.view_count %>
          </td>
          <td id="show_raty" data-score="<%= @book.score %>"></td>
              <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
              <% end %>
        </tr>
      </table>
      <table class = "table" id = "comment-list">
        <%= render partial: "book_comments/comment", collection: @book.book_comments %>
      </table>
      <div>
        <%= form_with model: [@book, @book_comment], local: false, html: { id: 'new_book_comment' } do |f| %>
          <%= f.text_area :comment, placeholder: "コメントをここに", style: "width: 100%" %>
          <%= f.submit "送信"%>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    let elem = document.querySelector('#show_raty');
    let opt = {  
      readOnly: true, // 読み取り専用にする
      score: elem.dataset.score, // 評価点を表示
      starOn: "<%= asset_path('star_images/star-on.png') %>",
      starOff: "<%= asset_path('star_images/star-off.png') %>",
      starHalf: "<%= asset_path('star_images/star-half.png') %>"
    };
    raty(elem, opt);
  });
</script>